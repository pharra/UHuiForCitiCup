server {
    listen      80; # 监听80端口

    root       /home/zhang/UHuiForCitiCup;
    access_log /home/zhang/UHuiForCitiCup/log/access_log;
    error_log  /home/zhang/UHuiForCitiCup/log/error_log;

    server_name www.uhuiforciti.cn; # 配置域名

    # 处理静态文件/favicon.ico:
    location /favicon.ico {
        root /home/zhang/UHuiForCitiCup;
    }

    # 处理静态资源:
    location ~ ^\/static\/.*$ {
        root /home/zhang/UHuiForCitiCup/UHuiWebApp;
    }

    # 动态请求转发到8000端口:
    location / {
        proxy_pass       http://127.0.0.1:8000;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
